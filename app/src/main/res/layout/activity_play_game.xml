<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e8fffd"
    android:weightSum="10"
    tools:context=".PlayGame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/btnBack"
                android:layout_centerVertical="true"
                android:background="@mipmap/btn_back_03"
                android:layout_alignParentLeft="true"
                />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:id="@+id/btnMenu"
                android:layout_centerVertical="true"
                android:background="@mipmap/btn_menu_02"
                android:layout_alignParentRight="true"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/txtMaCauHoi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_02"
                    android:text="Câu"
                    android:textAlignment="center"
                    android:textColor="#0068ff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCauHoiThu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_02"
                    android:layout_marginLeft="10dp"
                    android:text="10"
                    android:textAlignment="center"
                    android:textColor="#0068ff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.4"
        android:background="@mipmap/box_02"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtCauHoi"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_08"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="25dp"
            android:text="Cái này là cái gì đây?"
            android:textAlignment="center"
            android:textColor="#525252"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:paddingTop="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                >

            <TextView
                android:id="@+id/txtDiemNe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_02"
                android:text="Điểm:"
                android:textAlignment="center"
                android:textColor="#0068ff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtDiemNe"
                android:fontFamily="@font/font_02"
                android:layout_marginLeft="10dp"
                android:text="10"
                android:textAlignment="center"
                android:textColor="#0068ff"
                android:textSize="24sp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDiemCaoNe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_02"
                    android:text="Cao nhất:"
                    android:layout_below="@+id/txtDiemNe"
                    android:textAlignment="center"
                    android:textColor="#0068ff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDiemCao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtDiemCaoNe"
                    android:fontFamily="@font/font_02"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/txtDiem"
                    android:text="10"
                    android:textAlignment="center"
                    android:textColor="#0068ff"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/hpTym"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                >

                <ImageView
                    android:id="@+id/traiTym01"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_hp_01"
                    />

                <ImageView
                    android:id="@+id/traiTym02"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_hp_01"
                    android:layout_marginLeft="3dp"
                    />

                <ImageView
                    android:id="@+id/tym3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_hp_01"
                    android:layout_marginLeft="3dp"
                    />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:weightSum="2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/DapAnA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_button_dapan"
                    android:fontFamily="@font/font_08"
                    android:text="Câu hỏi"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/dapAnB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_button_dapan"
                    android:fontFamily="@font/font_08"
                    android:text="Câu hỏi"
                    android:layout_marginLeft="5dp"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:weightSum="10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">

                <Button
                    android:id="@+id/DapAnC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_button_dapan"
                    android:fontFamily="@font/font_08"
                    android:text="Câu hỏi"
                    android:textAllCaps="false"
                    android:layout_marginRight="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">
                <Button
                    android:id="@+id/dapAnD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_button_dapan"
                    android:fontFamily="@font/font_08"
                    android:layout_marginLeft="5dp"
                    android:text="Câu hỏi"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>