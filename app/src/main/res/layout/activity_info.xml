<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#e8fffd"
    tools:context=".Info">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"

        >

        <ImageView
            android:id="@+id/info_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/avatar" />

        <TextView
            android:id="@+id/info_name_dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Nguyễn Phúc Bảo Châu"
            android:textColor="#121212"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_maildev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="Liên hệ: soc900k@gmail.com hoặc 0775712017" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btnFace"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/facebook_icon"
                android:padding="20dp"
                android:paddingTop="60dp" />

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/btnCHPlay"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/media_play_icon"
                android:paddingLeft="200dp"
                android:paddingTop="20dp" />

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/btnYTB"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/youtube_icon"
                android:paddingLeft="200dp"
                android:paddingTop="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/info_ver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="0dp"
            android:text="Version 1.1.2"
            android:textAlignment="center"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>