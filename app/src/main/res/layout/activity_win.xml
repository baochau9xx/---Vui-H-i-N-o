<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e8fffd"
    android:gravity="center"
    tools:context=".Win">

    <ImageView
        android:id="@+id/winImage"
        android:layout_width="230dp"
        android:layout_height="220dp"
        android:background="@mipmap/you_win" />

    <TextView
        android:id="@+id/chucmung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chúc mừng mày !"
        android:textAlignment="center"
        android:textColor="#FF1313"
        android:textSize="23dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/comeback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhớ quay lại ở phiên bản sau nhe!!"
        android:textAlignment="center"
        android:textColor="#2E2E2E"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />

    <Button
        android:id="@+id/veMenu"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="#F3FFC107"
        android:text="Về Menu"
        android:textAlignment="center"
        android:textColor="#AC1005"
        android:textSize="16dp" />

</LinearLayout>